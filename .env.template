# Environment Variables Template

# Copy this file to .env and fill in your values
# Never commit .env to version control

# =============================================================================
# Azure Subscription & Resource Group
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP_NAME=rg-medicaid-rag-dev
AZURE_LOCATION=eastus2

# =============================================================================
# Azure AI Search
# =============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_ADMIN_KEY=your-search-admin-key-here
AZURE_AI_SEARCH_INDEX_NAME=md-medicaid

# Legacy aliases (for backwards compatibility)
AZURE_AI_SEARCH_ENDPOINT=${AZURE_SEARCH_ENDPOINT}
AZURE_AI_SEARCH_API_KEY=${AZURE_SEARCH_ADMIN_KEY}

# =============================================================================
# Azure OpenAI Service
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai-service.openai.azure.com
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# Model Deployments
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-3-small
AZURE_OPENAI_EMBED_DIMS=1536
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-5-chat

# =============================================================================
# Azure AI Translator
# =============================================================================
AZURE_TRANSLATOR_KEY=your-translator-key-here
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com
AZURE_TRANSLATOR_REGION=eastus2

# =============================================================================
# Azure AI Foundry
# =============================================================================
FOUNDRY_PROJECT_ENDPOINT=https://your-foundry-project.eastus2.inference.ml.azure.com
FOUNDRY_AGENT_ID=your-agent-id-here

# =============================================================================
# Development Settings
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# Optional: Key Vault (for production deployments)
# =============================================================================
# AZURE_KEY_VAULT_NAME=kv-medicaid-rag-dev
# Use Key Vault references instead of direct secrets in production
